{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Endpoints Configuration Schema",
  "description": "Schema for external endpoints configuration file",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "nodeId": {
        "type": "string",
        "description": "The ID of the node."
      },
      "endpoints": {
        "type": "array",
        "description": "List of endpoints for the node.",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "The ID of the endpoint."
            },
            "config_path": {
              "type": "string",
              "description": "Path to the endpoint configuration file."
            }
          },
          "required": ["id", "config_path"]
        }
      }
    },
    "required": ["nodeId", "endpoints"]
  }
}